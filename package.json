{
    "name": "taskchain",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "install:backend": "npm --prefix ./apps/backend install",
        "install:frontend": "npm --prefix ./apps/frontend install",
        "install:eslint-config": "npm --prefix ./packages/eslint-config install",
        "install:types": "npm --prefix ./packages/types install",
        "install:apps": "npm run install:backend && npm run install:frontend",
        "install:packages": "npm run install:eslint-config && npm run install:types",
        "install:all": "npm install && npm run install:apps && npm run install:packages",
        "check": "turbo run lint check-types",
        "build": "npm run install:all && turbo run build",
        "start": "node apps/backend/dist/main.js",
        "dev": "turbo run dev"
    },
    "dependencies": {
        "turbo": "^2.4.4"
    },
    "packageManager": "npm@11.2.0",
    "workspaces": [
        "apps/*",
        "packages/types"
    ],
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "eslint": "^9.23.0",
        "eslint-plugin-vue": "^10.0.0",
        "globals": "^16.0.0",
        "typescript-eslint": "^8.28.0"
    }
}
